XF86AudioMute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && dwmstatus

XF86AudioRaiseVolume
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ && dwmstatus

XF86AudioLowerVolume
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && dwmstatus

XF86MonBrightness{Up,Down}
	light -{A,U} 5 && dwmstatus

ctrl + shift + 3
	flameshot gui

ctrl + shift + 4
	flameshot screen --clipboard
